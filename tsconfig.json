{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es5",
    "baseUrl": "./",
    "paths": {
      "components/*": ["lib/components/*"],
      "containers/*": ["lib/containers/*"],
      "pages/*": ["lib/pages/*"],
      "hoc/*": ["lib/hoc/*"],
      "models/*": ["lib/models/*"],
      "hooks/*": ["lib/hooks/*"],
      "store/*": ["lib/store/*"],
      "config/*": ["lib/config/*"],
      "styles/*": ["lib/styles/*"],
      "types/*": ["lib/types/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "rootDirs": ["lib", "stories"]
  },
  "include": ["lib", "public/service-worker.js", "stories"],
  "exclude": ["**/*.svg", "**/node_modules/**", "**/*.scss"]
}
